<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.mindblown.drunkbearzz.mindblown.FinishGameActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Game Finished"
        android:id="@+id/textView"
        android:gravity="center"
        android:textSize="@dimen/abc_action_button_min_width_material"
        android:textStyle="bold"
        android:textColor="#0c3834"
        android:layout_marginTop="62dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Correct : "
        android:id="@+id/txt_correct"
        android:gravity="center"
        android:textSize="@dimen/abc_action_button_min_width_material"
        android:textStyle="bold"
        android:textColor="#4dff44"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/txt_incorrect"
        android:layout_alignParentLeft="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Incorrect : "
        android:id="@+id/txt_incorrect"
        android:gravity="center"
        android:textSize="@dimen/abc_action_button_min_width_material"
        android:textStyle="bold"
        android:textColor="#ff3b45"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/txt_rank"
        android:layout_alignParentLeft="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Rank: "
        android:id="@+id/txt_rank"
        android:gravity="center"
        android:textSize="@dimen/abc_action_button_min_width_material"
        android:textStyle="bold"
        android:textColor="#02ffe8"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="59dp" />
</RelativeLayout>
